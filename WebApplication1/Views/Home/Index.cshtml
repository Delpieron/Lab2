@{
    ViewData["Title"] = "Home Page - simple form";
}

<html>
<head>
    <title>Simple year form</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <center>
        <div class="container">
            <h1>Simple year form</h1>
            <form method="POST" action="/Home/Form1">
                <div class="form-group row">
                    <div class="col-xs-2">
                        <label for="Name">Imię</label>
                        <input class="form-control" type="text" id="Name" name="Name">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-2">
                        <label for="Description">Data Urodzenia</label>
                        <input class="form-control" type="date" id="BirthDate" name="BirthDate">
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-xs-2">
                        <input class="btn btn-primary" type="submit" value="Dodaj element">
                    </div>
                </div>
            </form>
        </div>
    </center>
</body>
</html>